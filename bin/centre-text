#! /bin/sh
# calculates an error encoding
# uses cast (installed as part of the foundry ethereum dev environment)
# see https://book.getfoundry.sh/getting-started/installation

if [ -z "$1" ]; then
  echo "Usage: $0 '<text>'"
  exit 1
fi

# Concatenate all positional parameters with spaces
input_text="$*"

# Calculate total width and the width for centering
total_width=70
start_column=4
centered_width=$((total_width - start_column))

# Calculate padding for centering
text_length=${#input_text}
padding=$(( (centered_width - text_length) / 2 ))

# Generate the output
echo "    /*//////////////////////////////////////////////////////////////////////////"
printf "%${start_column}s" ""
printf "%${padding}s%s\n" "" "$input_text"
echo "    //////////////////////////////////////////////////////////////////////////*/"