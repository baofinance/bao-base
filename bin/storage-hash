#!/usr/bin/env bash
set -e
set -o pipefail

# calculates a storage has for a contract
# uses chisel (installed as part of the foundry ethereum dev environment)
# see https://book.getfoundry.sh/getting-started/installation

if [ -z "$1" ]; then
  echo "Usage: $0 <Contract name>"
  exit 1
fi

KEY=$1

case $KEY in
  *.*) ;; # contains "."s, do nothing
  *) KEY="bao.storage.$KEY" ;;
esac

echo using KEY="$KEY"
echo chisel --deny never eval "'"'keccak256(abi.encode(uint256(keccak256("'"$KEY"'")) - 1)) & ~bytes32(uint256(0xff))'"'"
# run the chisel command with --deny never to allow warnings, extract the hash
chisel --deny never eval 'keccak256(abi.encode(uint256(keccak256("'"$KEY"'")) - 1)) & ~bytes32(uint256(0xff))' | sed -n 's/.*Hex:\s*//p'
